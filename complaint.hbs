<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hostel and Mess Complaint</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #000;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .wrapper {
            position: relative;
            width: 500px;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 0 50px #0ef;
            border-radius: 3rem;
            padding: 40px;
            overflow: hidden;
        }

        .wrapper:hover {
            animation: animate 1s linear infinite;
        }

        @keyframes animate {
            100% {
                filter: hue-rotate(360deg);
            }
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #555;
        }

        select, input[type="text"], input[type="number"], input[type="date"], input[type="time"], textarea {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: none;
            border-bottom: 1px solid #080404;
            background-color: transparent;
            font-size: 16px;
            color: #333;
            border-radius: 0;
            transition: border-bottom-color 0.3s ease;
        }

        select:focus, input[type="text"]:focus, input[type="number"]:focus, input[type="date"]:focus, input[type="time"]:focus, textarea:focus {
            border-bottom-color: #5d7aa7;
            outline: none;
        }

        textarea {
            height: 40px;
            resize: vertical;
        }

        button {
            width: 100%;
            padding: 14px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }

        .hidden {
            display: none;
        }

        .visible {
            display: block;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <h1>Hostel and Mess Complaint</h1>
        <form action="/complaint" method="post">
        <label for="complaint_type">Select Complaint Type:</label>
        <select id="complaint_type" onchange="toggleComplaintSection()">
            <option value="hostel">Hostel</option>
            <option value="mess">Mess</option>
        </select>
        <div id="hostel_complaint" class="visible">
            <label for="room_number">Room Number:</label>
            <input type="text" id="room_number" name="room_number" >
            <label for="roll_number">Roll Number:</label>
            <input type="text" id="roll_number" name="roll_number" >
            <label for="hostel_complaint_details">Complaint Details:</label>
            <textarea id="hostel_complaint_details" name="hostel_complaint_details" rows="5"></textarea>
        </div>
        <div id="mess_complaint" class="hidden">
            <label for="room_number">Room Number:</label>
            <input type="text" id="room_number" name="room_number" >
            <label for="roll_number">Roll Number:</label>
            <input type="text" id="roll_number" name="roll_number" >
            <label for="mess_complaint_details">Complaint Details:</label>
            <textarea id="mess_complaint_details" name="mess_complaint_details" rows="5"></textarea>
        </div>
        <button type="submit">Submit</button>
        </form>
    </div>

    <script>
        function toggleComplaintSection() {
            var complaintType = document.getElementById("complaint_type").value;
            var hostelSection = document.getElementById("hostel_complaint");
            var messSection = document.getElementById("mess_complaint");

            if (complaintType === "hostel") {
                hostelSection.classList.remove("hidden");
                hostelSection.classList.add("visible");
                messSection.classList.remove("visible");
                messSection.classList.add("hidden");
            } else {
                hostelSection.classList.remove("visible");
                hostelSection.classList.add("hidden");
                messSection.classList.remove("hidden");
                messSection.classList.add("visible");
            }
        }
    </script>
</body>
</html>