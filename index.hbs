            </div>
        </div>
        <div class="footer-bottom">
            <p>Â© 2024 RGIPT Campus Helpdesk. All rights reserved.</p>
        </div>
    </div>

    <script>

        function toggleMenu() {
            const navbarMenu =
                document.getElementById('navbarMenu'); if (navbarMenu.style.display ===
                    'none' || navbarMenu.style.display === '') {
                        navbarMenu.style.display =
                        'flex';
            } else { navbarMenu.style.display = 'none'; }
        } function
            viewQueries() {
                fetch('/fetchQueries').then(response => response.json())
                .then(data => {
                    const queriesContainer = document.createElement('div');
                    data.forEach(query => {
                        const queryDiv = document.createElement('div');
                        queryDiv.textContent = JSON.stringify(query);
                        queriesContainer.appendChild(queryDiv);
                    }); 
                    const existingQueries =
                        document.querySelector('.queries div'); if (existingQueries) {
                            existingQueries.remove();
                        }
                    document.querySelector('.queries').appendChild(queriesContainer);
                })
                .catch(error => {
                    console.error('Error:', error); alert('An error occurred while fetching queries.');
                });
            }

    </script>
</body>

</html>