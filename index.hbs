<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .navbar {
            display: flex;
            justify-content: space-around;
            align-items:
                center;
            background-color: #f0f0f0;
            position: sticky;
            top: 0;
            z-index:
                1000;
        }

        .navbar h1 {
            color: blue;
        }

        .navbar ul {
            list-style-type: none;
            display: flex;
            gap: 20px;
        }

        .navbar li {
            display: inline;
            margin-left:
                20px;
        }

        .hamburger {
            display: none;
            flex-direction: column;
            cursor:
                pointer;
        }

        .bar {
            width: 25px;
            height: 3px;
            background-color: blue;
            margin: 3px 0;
        }
    </style>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }

        .background-image {
            background-image:
                url('https://www.rgipt.ac.in/site/writereaddata/PageGallary/PG_202206021213448507.jpg');
            background-size: contain;
            background-repeat: no-repeat;
            height: 100vh;
        }

        .container {
            display: flex;
            justify-content: space-between;
            flex-wrap:
                wrap;
            width: 80%;
            margin: auto;
            overflow: hidden;
            background-color:
                rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            padding: 20px;
        }

        .option {
            flex: 1;
            border: 1px solid #ccc;
            border-radius: 10px;
            margin: 10px;
            padding: 20px;
            text-align:
                center;
        }

        .option h2 {
            color: #50a8a0;
        }

        .option a {
            display: block;
            background-color: #50a8a0;
            color: white;
            padding: 10px;
            margin-top: 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .option a:hover {
            background-color: #3a8f85;
        }

        .queries {
            width: 80%;
            margin: auto;
            overflow: hidden;
            background-color: rgba(255,
                    255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0,
                    0.5);
            padding: 20px;
            text-align: center;
        }

        .resources {
            background-color:
                #50a8a0;
            color: white;
            padding: 10px;
            text-align: center;
            margin: 10px auto;
            /* Center the element horizontally */
            width: 80%;
            /* Take 80% width
      of the .container */
            max-width: none;
            /* Reset max-width */
            border-radius:
                10px;
        }

        @media (max-width: 768px) {
            .navbar ul {
                display: none;
                position:
                    absolute;
                top: 100%;
                right: 0;
                /* Align to the right */
                width: 25%;
                /* Set
      width for the menu */
                max-width: 300px;
                /* Maximum width */
                background-color: #f0f0f0;
                text-align: left;
                /* Align text to the left */
                padding: 5px;
                z-index: 999;
                flex-direction: column;
                /* Display options
      vertically */
                gap: 10px;
                /* Space between options */
                border-radius: 5px;
                /* Rounded corners */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                /* Shadow
      for menu */
            }

            .navbar.active ul {
                display: flex;
            }

            .hamburger {
                display:
                    flex;
            }
        }
    </style>

    <style>
        .footer {
            background-color: #f0f0f0;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            max-width: 80%;
            margin: 20px auto;
            padding: 20px;
        }

        .footer h2,
        .footer h3 {
            color: blue;
            margin-top: 40px;
        }

        .footer ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .footer p {
            color: gray;
            margin: 0;
        }

        .footer-bottom {
            text-align: center;
            padding: 80px 0;
            background-color: #f0f0f0;
            max-width:
                80%;
            margin: 0 auto;
        }
    </style>
    <title>RGIPT Campus Helpdesk</title>
</head>

<body>
    <div class="navbar">
        <h1>RGIPT Campus Helpdesk</h1>
        <ul id="navbarMenu">
            <li><a href="/">Home</a></li>
            <li><a href="/aboutus">About Us</a></li>
            <li><a href="/contactus">Contact Us</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Signup</a></li>

        </ul>
        <div class="hamburger" onclick="toggleMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
