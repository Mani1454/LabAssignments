<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup - Campus Helpdesk</title>
    <style>
        * {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: black;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .wrapper {
            position: relative;
            width: 500px;
            height: auto;
            max-height: 80vh;
            overflow-y: auto;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 3rem;
            padding: 40px;
            box-shadow: 0 0 50px #0ef;
        }

        .wrapper:hover {
            animation: animate 1s linear infinite;
        }

        @keyframes animate {
            100% {
                filter: hue-rotate(360deg);
            }
        }

        h1 {
            text-align: center;
            font-size: 30px;
            margin-bottom: 20px;
            color: #333;
        }

        .input-field {
            position: relative;
            margin-bottom: 15px;
        }

        .input-field i {
            position: absolute;
            left: 10px;
            top: 65%;
            transform: translateY(-50%);
            color: gray;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .input {
            background: transparent;
            width: calc(100% - 20px);
            padding: 8px 40px 8px 30px;
            margin: 8px 0;
            border: none;
            display: inline-block;
            border-bottom: 1px solid #080404;
            font-size: 16px;
        }

        .checkbox-field {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        input[type="checkbox"] {
            margin-right: 5px;
        }

        .forgot-password {
            display: block;
            text-align: right;
            margin-top: 10px;
            color: #333;
            text-decoration: none;
        }

        .google-login {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        .google-icon {
            font-size: 24px;
            margin: 0 10px;
            text-decoration: none;
        }

        .google-icon:hover {
            color: #000;
        }

        .signup {
            text-align: center;
            margin-top: 20px;
        }

        a {
            color: #333;
            text-decoration: none;
        }

        a:hover {
            color: #007bff;
        }

        .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        button {
            background-color: rgba(93, 122, 167, 0.5);
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border-radius: 25px;
            cursor: pointer;
            width: 100%;
        }

    </style>
</head>

<body>
    <div class="wrapper">
        <h1>RGIPT Campus Helpdesk</h1>

        <form id="signup-form" action="/register" method="post" onsubmit="return validateForm()">

            <div class="input-field">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="input" required>
            </div>

            <div class="input-field">
                <label for="mobile">Mobile No.</label>
                <input type="tel" name="mobile" id="mobile" class="input" required>
            </div>

            <div class="input-field">
                <label for="email">Email id (college)</label>
                <input type="email" name="email" id="email" class="input" required>
                <i class="fas fa-user"></i>
            </div>

            <div class="input-field">
                <label for="roomNo">Room No.</label>
                <input type="text" name="roomNo" id="roomNo" class="input" required>
            </div>
            
            <div class="input-field">
                <label>Gender</label>
            </div>
            
            <div class="checkbox-field">
                <input type="radio" name="gender" id="male" value="male" style="margin-right: 10px;">
                <label for="male" style="margin-right: 25px;">Male</label>
            
                <input type="radio" name="gender" id="female" value="female" style="margin-right: 10px;">
                <label for="female">Female</label>
            </div>
             

            <div class="input-field">
                <label for="password">Password (4-12 characters)</label>
                <input type="password" name="password" id="password" class="input" required>
                <i class="fas fa-lock"></i>
            </div>

            <div class="input-field">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="input" required>
            </div>

            <div class="submit">
                <button type="submit">Sign Up</button>
            </div>

        </form>

        <nav class="signup">Already have an account? <a href="/login">Login</a></nav>
    </div>

    <script>
        function validateForm() {
            var email = document.getElementById("email").value;
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;
            var emailError = document.getElementById("email-error");
            var passwordError = document.getElementById("password-error");
            var confirmPasswordError = document.getElementById("confirmPassword-error");

            // Email validation
            if (!email.endsWith("@rgipt.ac.in")) {
                emailError.innerText = "Enter your college email-id (e.g., yourname@rgipt.ac.in)";
                return false;
            }
            emailError.innerText = ""; // Clear previous error message

            // Password validation
            if (password.length < 4 || password.length > 12) {
                passwordError.innerText = "Password must be between 4 and 12 characters.";
                return false;
            }
            passwordError.innerText = ""; // Clear previous error message

            // Confirm password validation
            if (confirmPassword !== password) {
                confirmPasswordError.innerText = "Passwords do not match.";
                return false;
            }
            confirmPasswordError.innerText = ""; 
            return true;
        }
    </script>
</body>

</html>
